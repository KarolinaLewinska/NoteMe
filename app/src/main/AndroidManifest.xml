<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.noteme">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NoteMe">
        <activity android:name=".AddNoteActivity"
            android:theme="@style/Theme.Design.NoActionBar"
            android:label="Moje notatki"></activity>
        <activity
            android:name=".LoginActivity"
            android:label="Logowanie" />
        <activity
            android:name=".RegisterActivity"
            android:label="Rejestracja" />
        <activity
            android:name=".HomeActivity"
            android:label="Witamy w NoteMe" />
        <activity
            android:name=".MainActivity"
            android:label="Moje notatki">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>